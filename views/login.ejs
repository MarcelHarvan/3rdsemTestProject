	</head>

	<body>

        <section class="login-form">

            <img src="/img/logo_nevisca.png" class="logo" />
                
                <form method="POST" action="login">
                        <%if (message.length > 0) { %>
                            <div class="alert alert-danger"> <%= message %></div>
                            <% } %>
                        
                    <div class="form-group">
                        <label for="user_email">Username or Email address</label>
                        <input type="text" class="form-control" id="user_email" placeholder="Email" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="user_password">Password</label>
                        <input type="password" class="form-control" id="user_password" placeholder="Password" name="password" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                        <button type="submit" class="btn btn-primary right-btn" aria-label="Log In">
                            Log in
                        </button>
                    </div>
                </form>

                <a href="#" class="lost-lbl dark">Lost your password?</a>
                
        </section>

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/main.js"></script>

	</body>

</html>
