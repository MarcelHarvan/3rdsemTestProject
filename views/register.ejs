<html lang="en" class="no-js">
	<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
		<title>Nevisca | Admin</title>
		<meta name="author" content="Andrea Amado de Cerqueira" />
        <!-- Bootstrap -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons" rel="stylesheet">
		<link href="/css/bootstrap-material-design.min.css" rel="stylesheet">
		<link href="/css/styles.css" rel="stylesheet">
		<link href="/css/queries.css" rel="stylesheet">
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		<script src="js/html5shiv.js"></script>
		<script src="js/respond.min.js"></script>
		<![endif]-->
	</head>

	<body>

        <section class="login-form">

            <img src="/img/logo_nevisca.png" class="logo" />
                
                <form method="POST" action="register">
                    <% for(var i=0; i < errors.length; i++) { %>
                          <li><%= errors[i].msg %></li>
                     <% } %>  
                    <div class="form-group">
                        <label for="Name" class="bmd-label-floating"></label>
                        <input type="text" class="form-control" id="user_name" placeholder="Name" name="name" value="<%- user.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="bmd-label-floating"></label>
                        <input type="text" class="form-control" id="user_email" placeholder="Email address" name="email" value="<%- user.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="Username" class="bmd-label-floating"></label>
                        <input type="text" class="form-control" id="user_username" placeholder="Username" name="username" value="<%- user.username %>" required>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="bmd-label-floating"></label>
                        <input type="password" class="form-control" id="user_password" placeholder="Password" name="password"  required>
                    </div>
                    <div class="form-group">
                        <label for="Confirm" class="bmd-label-floating"></label>
                        <input type="password" class="form-control" id="user_password" placeholder="Confirm Password" name="password2"  required>
                    </div>
                    <div class="form-group">
                        <label for="Phone" class="bmd-label-floating"></label>
                        <input type="Phone" class="form-control" id="user_phone" placeholder="Phone" name="phone" value="<%- user.phone %>" required>
                    </div>
                    <div class="form-group">
                        
                        <button type="submit" class="btn btn-raised btn-primary right-btn" >
                            Sign Up
                        </button>
                    </div>
                    <div class="form-group">
                        &nbsp;
                    </div>
                </form>
                <a href="/account/login" class="lost-lbl dark">Alredy have an account? Sign In</a>
                
                
        </section>

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="/js/popper.js"></script>
        <script src="/js/bootstrap-material-design.min.js"></script>
		<script src="/js/main.js"></script>
        <script>$(document).ready(function() { $('body').bootstrapMaterialDesign(); });</script>
        
	</body>

</html>
